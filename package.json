{
  "name": "bittricky",
  "version": "1.0.2",
  "description": "Mitul Patel's command-line business card",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "bittricky": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && cp -r docs/ dist/docs/",
    "start": "node dist/cli.js",
    "dev": "tsx src/cli.ts",
    "prepublishOnly": "yarn build",
    "publish": "yarn build && yarn publish",
    "test": "jest",
    "test:path": "jest --testPathPattern",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "cli",
    "business-card",
    "card",
    "profile",
    "bittricky"
  ],
  "author": {
    "name": "Mitul Patel",
    "email": "me@mitulpa.tel",
    "url": "https://mitulpa.tel"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.8.7",
    "@types/yargs": "^17.0.29",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "yargs": "^17.7.2"
  },
  "engines": {
    "node": ">=14.16"
  }
